<resources>

    <!-- Base application theme. -->
    <style name="ItFoodTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryLight</item>
        <item name="android:textColorPrimary">@color/colorTextOnP</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ItFoodTheme.toolBarExpand">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>
    <style name="ItFoodTheme.toolBarCollapsed">
        <item name="android:textColorPrimary">@color/colorTextOnP</item>
    </style>
</resources>
