<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorItemBackground">
    <TextView
        android:id="@+id/tvAddressName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/colorTextOnS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text = "我家"/>
    <TextView
        android:id="@+id/tvAddressDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/colorTextOnP"
        app:layout_constraintTop_toBottomOf="@id/tvAddressName"
        app:layout_constraintStart_toStartOf="@id/tvAddressName"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text = "桃園市中大路500號30巷300號50樓"/>


</androidx.constraintlayout.widget.ConstraintLayout>