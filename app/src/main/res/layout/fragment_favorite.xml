<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8"
    android:orientation="vertical"
    tools:context=".favorite.FavoriteFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:background="@color/colorPrimary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/back"
                android:scaleType="center" />

            <TextView
                android:id="@+id/tvFavoriteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="@string/tvFavoriteTitle"
                android:textColor="@color/colorTextOnP"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFavoriteNoItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivFavoriteNoItem"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/coffee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btBackToMain"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/btBackToMain"
            app:layout_constraintEnd_toEndOf="@+id/ivFavoriteNoItem"
            app:layout_constraintStart_toStartOf="@+id/ivFavoriteNoItem"
            app:layout_constraintTop_toBottomOf="@+id/tvFavoriteNoItem" />

        <TextView
            android:id="@+id/tvFavoriteNoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/tvFavoriteNoItem"
            android:textColor="@color/colorTextOnP"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFavoriteNoItem"
            app:layout_constraintStart_toStartOf="@+id/ivFavoriteNoItem"
            app:layout_constraintTop_toBottomOf="@+id/ivFavoriteNoItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>